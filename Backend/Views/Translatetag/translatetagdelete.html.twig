{% extends "Templates/Masterpage/masterbackend.html.twig" %}
{% block content %}
<script src="{{templatepath~'/Views/Translatetag/disabletranslatetagfields.js'}}"></script>
<div><h3>{{'Are you sure you want to delete this Translation Tag?'}}</h3></div>
<br>

<form id="appform" method="post" action="{{deleteurl}}">
<table width="400" border="0" cellspacing="1" cellpadding="2">
        <tr>
            <td ><label class="control-label">{{'Language'}}</label></td>
            <td>{{globalobj.getlanguageselect('',languagecode)}}</td>
        </tr>
        <tr>
            <td><label class="control-label">{{'Key'}}</label></td>
            <td><input id ="key" name="key" type="text"  class="span6 typeahead" value="{{key|raw}}" readonly></td>   
        </tr>
       <tr>
            <td><label class="control-label">{{'Translation'}}</label></td>
            <td><textarea  id ="translation"  name="translation"  rows="3" readonly>{{translation}}</textarea></td>
            <td><label id ="translationerror" name="translationerror"></label></td> 
        </tr>
</table>
<br>
<div class="options btn-group">
<input  id ="deletebutton" class="btn btn-primary" type="submit" value="Delete" />
<input onClick="window.location.href='{{listurl}}'"id ="cancelbutton" class=" btn input-small"  value="Cancel" />
</div>
  <input type="hidden" id="parameter" name="parameter"  value="{{parameter}}">
</form>
{% endblock content%}
