{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath~'/Views/Skill/validateskill.js'}}"></script>
{% endblock javascript%} 
{% block content %}
{% block breadcrumb %}
{{parent()}}
{% endblock breadcrumb%}
<label class="col-sm-offset-2 col-sm-8 error">{{skillForm.errormessage|raw}}</label>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{formUrl}}" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Curricullum'}}</label>
            <div class="col-sm-3">
            {{globalobj.getcurricullumlist('class="form-control"',skillForm.curricullumid)}}
            </div>
         </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Type'}}</label>
              <div class="col-sm-3">
              {{globalobj. getmultiparamselect('skilltype',skillForm.type,'class="form-control"','Please select a Type','type','type')}}
              </div>      
        </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Skill'}}</label>
              <div class="col-sm-3">
              <input id ="skill" name="skill" type="text" id="language" class="form-control"  value="{{skillForm.skill|raw}}">    
              </div>      
        </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Percentage'}}</label>
              <div class="col-sm-3">
             <input id ="percentage" name="percentage" type="text" id="language" class="form-control" value="{{skillForm.percentage|raw}}">
              </div> 
        </div>
         <div class="form-group">
             <label class="control-label col-sm-2">{{'Level'}}</label>
              <div class="col-sm-3">
             <input id ="percentage" name="level" type="text" id="level" class="form-control" value="{{skillForm.level|raw}}">
              </div> 
        </div>
         <div class="form-group">
              <div class="checkbox" style="padding-left:17.5%;">
              <label><input type="checkbox" name="active" id="active" {% if skillForm.active==1 %} checked {% endif %}>{{'Active'}}</label>
              </div>   
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Description'}}</label>
            <div class="col-sm-8">
               <textarea id ="description" name="description"  rows="3">{{skillForm.description|raw}}</textarea> 
          </div>
        </div>
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>

{% endblock content%}
