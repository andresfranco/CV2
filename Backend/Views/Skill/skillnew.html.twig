{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath~'/Views/Skill/validateskill.js'}}"></script>
{% endblock javascript%} 
{% block content %}
{% block breadcrumb %}
{{parent()}}
{% endblock breadcrumb%}
<label class="col-sm-offset-2 col-sm-8 error">{{errormessage|raw}}</label>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{selfurl}}" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Curricullum'}}</label>
            <div class="col-sm-3">
            {{globalobj.getcurricullumlist('class="form-control"',curricullumid)}}
            </div>
         </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Type'}}</label>
              <div class="col-sm-3">
              {{globalobj. getmultiparamselect('skilltype',type,'class="form-control"','Please select a Type','type','type')}}
              </div>      
        </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Skill'}}</label>
              <div class="col-sm-3">
              <input id ="skill" name="skill" type="text" id="language" class="form-control"  value="{{skill|raw}}">    
              </div>      
        </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Percentage'}}</label>
              <div class="col-sm-3">
             <input id ="percentage" name="percentage" type="text" id="language" class="form-control" value="{{percentage|raw}}">
              </div> 
        </div> 
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>

{% endblock content%}
