{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath ~'/Views/user/validateuser.js'}}"></script>
{% endblock javascript%} 
{% block content %}
{% block breadcrumb %}
{{parent()}}
{% endblock breadcrumb%}
<label class="col-sm-offset-2 col-sm-8 error">{{errormessage|raw}}</label>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{selfurl}}" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Username'}}</label>
            <div class="col-sm-3">
            <input name="username" type="text" id="username" class="form-control" value="{{username|raw}}">
            </div>
         </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Password'}}</label>
              <div class="col-sm-3">
              <input name="password" type="password" id="password" class="form-control">
              </div>      
        </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Confirm Password'}}</label>
              <div class="col-sm-3">
              <input name="password_confirm" type="password" id="password_confirm" class="form-control">  
              </div>      
        </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'E-mail'}}</label>
              <div class="col-sm-3">
              <input name="email" type="text" id="email" class="form-control" value="{{email|raw}}">
              </div> 
        </div> 
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>

{% endblock content%}