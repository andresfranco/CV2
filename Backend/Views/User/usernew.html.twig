{% extends "Templates/Masterpage/masterbackend.html.twig" %}
{% block content %}	
<script src="{{templatepath ~'/Views/user/validateuser.js'}}"></script>
<label class="error">{{ errormessage | raw}}</label><br>
<form id="appform" method="post" action="{{selfurl}}">
    <table width="400" border="0" cellspacing="1" cellpadding="2">
        <tr>
            <td width="100"><label class="control-label">{{'Username'}}</label></td>
            <td><input name="username" type="text" id="username" class="span6 typeahead" value="{{username|raw}}">
       <span class="error"></span></td>
        </tr>
         <tr>
            <td width="100"><label class="control-label">{{'Password'}}</label></td>
            <td><input name="password" type="password" id="password" class="span6 typeahead">
         <span class="error"></span></td>
        </tr>
        <tr>
            <td width="100"><label class="control-label">{{'Confirm Password'}}</label></td>
            <td><input name="password_confirm" type="password" id="password_confirm" class="span6 typeahead">
         <span class="error"></span></td>
        </tr>
        <tr>
            <td width="100"><label class="control-label">{{'Email'}}</label></td>
            <td><input name="email" type="text" id="email" class="span6 typeahead" value="{{email|raw}}"></td>
        </tr>
    </table>
    <br>
    <div class="options btn-group">
        <input  id ="deletebutton" class="btn btn-primary" type="submit" value="Save" />
        <input onClick="window.location.href='{{listurl}}'"id ="cancelbutton" class=" btn input-small"  value="Cancel" />
    </div>
</form>
{% endblock content %}