{% extends "Templates/Masterpage/masterbackend.html.twig" %}
{% block content %}
<div class="row-fluid">	
<div class="box blue span12">
<div class="box-header">
    {{'User Features'}}
</div>
<div class="box-content">
    <a href="{{basepath~'/passwordchange/'~id}}" class="quick-button span2">
<i class="icon-lock"></i>
<p>{{'Change Password'}}</p>
</a>
<div class="clearfix"></div>
</div>	
</div><!--/span-->
</div><!--/row-->
<script src="{{templatepath~'/Views/User/validateuser.js'}}"></script>
<form id="appform" method="post" action="{{updateurl}}">
    <table width="400" border="0" cellspacing="1" cellpadding="2">
        <tr>
            <td width="100"><label class="control-label">{{'Username'}}</label></td>
            <td><input name="username" type="text" id="username" class="span6 typeahead" value="{{username}}">
       <span class="error"></span></td>
        </tr>
        <tr>
            <td width="100"><label class="control-label">{{'Email'}}</label></td>
            <td><input name="email" type="text" id="email" class="span6 typeahead" value="{{email}}"></td>
        </tr>

    </table>
    <br>
    <div class="options btn-group">
        <input  id ="deletebutton" class="btn btn-primary" type="submit" value="Save" />
        <input onClick="window.location.href='{{listurl}}'"id ="cancelbutton" class=" btn input-small"  value="Cancel" />
    </div>
    <input type="hidden" id="id" name="id"  value="{{id}}">
</form>
{% endblock content %}