{% extends "Templates/Masterpage/masterbackend.html.twig" %}
{% block content %}
<script src="{{templatepath ~'/Views/Sysparam/validatesysparam.js'}}"></script>
<div class="row-fluid">	
<div class="box blue span12">
<div class="box-header">
    {{'System parameter options'}}
</div>
<div class="box-content">
    <a href="{{basepath~'/multiparams/'~id}}" class="quick-button span2">
<i class="icon-tag"></i>
<p>{{'Multiparam'}}</p>
</a>
<div class="clearfix"></div>
</div>	
</div><!--/span-->
</div><!--/row-->
<form id="appform" method="post" action="{{updateurl}}">
    <table  border="0" cellspacing="1" cellpadding="2">
         <tr>
            <td><label class="control-label">{{'Code'}}</label></td>
            <td><input name="code" type="text" id="code"  maxlength="45" class="span6 typeahead" value="{{code}}">
       <span class="error"></span></td>
        </tr>
        <tr>
            <td><label class="control-label">{{'Value'}}</label></td>
            <td><textarea class="cleditor" id ="value"  name="value"  rows="3" maxlength="900">{{value}}</textarea></td>
            <td><label id ="valueerror" name="valueerror"></label></td> 
        </tr>
        <tr>
            <td><label class="control-label">{{'Description'}}</label></td>
            <td><input name="description" type="text" id="description" maxlength="100" class="span6 typeahead" value="{{description}}"></td>
        </tr>

    </table>
    <br>
    <div class="options btn-group">
        <input  id ="deletebutton" class="btn btn-primary" type="submit" value="Save" />
        <input onClick="window.location.href='{{listurl}}'"id ="cancelbutton" class=" btn input-small"  value="Cancel" />
    </div>
    <input type="hidden" id="id" name="id"  value="{{id}}">
</form>
{% endblock content %}