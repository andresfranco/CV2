{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath~'/js/editor.js'}}"></script>
<script src="{{templatepath~'/Views/Curricullum/textareacurricullum.js'}}"></script>
<script src="{{templatepath~'/Views/Curricullum/validatecurricullum.js'}}"></script>
<script src="{{templatepath~'/Views/Curricullum/profilepicture.js'}}"></script> 
{% endblock javascript%} 
{% block css%}
{{parent()}}
<link href="{{basepath~'/Backend/css/editor.css'}}" type="text/css" rel="stylesheet"/>
{% endblock css%}
{% block content %}
     {% block breadcrumb %}
    {{parent()}}   
 {% endblock breadcrumb%}
<div class="col-sm-offset-2 col-sm-8">
  <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">{{'Curricullum parameters'}}</div>
  <div class="panel-body">
    
      <div class="btn-group button_option" role="group">
            <a href="{{basepath~'/urllist/'~id}}" class="btn btn-primary">
       <p><i class="fa fa-link"></i>{{' Url'}}</p>
       </a>
      </div>
      <div class="btn-group button_option" role="group">
           <a href="{{basepath~'/curricullumfiles/'~id}}" class="btn btn-primary">
       <p><i class="fa fa-file"></i>{{' Files'}}</p>
       </a>
        </div>
            

  </div>
</div>
</div>
<div class="col-sm-12">
<hr>
</div>
<label class="error">{{errormessage|raw}}</label><br>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post"  enctype="multipart/form-data" action="{{updateurl}}" class="form-horizontal" role="form">
    <div class="form-group">
            <label class="control-label col-sm-2">{{'Name'}}</label>
            <div class="col-sm-4">
            <input id ="name" name="name" type="text" id="language" value="{{name|raw}}" class="form-control">
            </div>
    </div>
    <div class="form-group">
            <label class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <img src="{{basepath~'/images/profilepic_'~obj.quit_special_chars(name)~'/'~picturename}}" width="128" height="128"/>
            </div>
    </div> 
     <div class="form-group">
            <label class="control-label col-sm-2">{{'Profile Picture'}}</label>
            <div class="col-sm-6">
            <div class="input-group">
            <span class="input-group-btn">    
            <span class="file-input btn btn-primary btn-file">
                <i class="fa fa-file"></i>{{' Browse'}}<input id ="profilepicture" name="profilepicture" type="file"/>
             </span>
            </span>   
                <input id="picturename" name="picturename" class="form-control" type="text" readonly value="{{picturename|raw}}"/>
            </div>
            </div>
    </div>  
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Main Text'}}</label>
              <div class="col-sm-8">
              <textarea id ="maintext" name="maintext" rows="3">{{maintext}}</textarea>
              </div>
              <div class="col-sm-offset-2 col-sm-8">
              <label id ="maintexterror" name="maintexterror"></label>
              </div>
        </div>
         <div class="form-group">
            
            <label class="control-label col-sm-2">{{'About Me'}}</label>
            <div class="col-sm-8"> 
            <textarea id="aboutme" name="aboutme"  rows="3">{{aboutme}}</textarea>
            </div>
            <div class="col-sm-offset-2 col-sm-8">
            <label id ="aboutmeerror" name="aboutmeerror"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Contact Details'}}</label>
            <div class="col-sm-8"> 
            <textarea  id ="contactdetails" name="contactdetails"  rows="3">{{contactdetails}}</textarea>
            </div>
             <div class="col-sm-offset-2 col-sm-8">
            <label id ="contactdetailserror" name="contactdetailserror"></label>
             </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Main Skills'}}</label>
            <div class="col-sm-8"> 
            <textarea  id ="mainskills" name="mainskills" rows="3">{{mainskills}}</textarea>
            </div>
             <div class="col-sm-offset-2 col-sm-8">
            <label id ="mainskillserror" name="mainskillserror"></label>
             </div>
        </div>
    <br>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>
{% endblock content%}
