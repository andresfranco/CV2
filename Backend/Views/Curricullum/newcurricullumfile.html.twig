{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath~'/Views/Curricullum/validatecurricullumfile.js'}}"></script>
<script src="{{templatepath~'/Views/Curricullum/curricullumfile.js'}}"></script>  
{% endblock javascript%} 
{% block content %}
  {% block breadcrumb %}
     <ol class="breadcrumb">
     <li><a href="{{link}}">{{option|raw}}</a></li>
     <li><a href="{{linkroute}}" class="route">{{route|raw}}</a></li>
     </ol>
 {% endblock breadcrumb%}
<label class="col-sm-offset-2 col-sm-8 error">{{errormessage|raw}}</label>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" enctype="multipart/form-data" action="{{selfurl}}" class="form-horizontal" role="form">
    
    <div class="form-group">
            <label class="control-label col-sm-2">{{'Curricullum'}}</label>
            <div class="col-sm-4">
            <input id ="name" name="cvname" type="text" id="cvname" value="{{cvname|raw}}" class="form-control" readonly>
            </div>
    </div>
    <div class="form-group">
            <label class="control-label col-sm-2">{{'Language'}}</label>
            <div class="col-sm-4">
            {{globalobj.getlanguageselect('class="form-control"',languagecode)}}
            </div>
    </div>
   
     <div class="form-group">
            <label class="control-label col-sm-2">{{'Curriculum File'}}</label>
            <div class="col-sm-6">
            <div class="input-group">
            <span class="input-group-btn">    
            <span class="file-input btn btn-primary btn-file">
                <i class="fa fa-file"></i>{{' Browse'}}<input id ="curricullumfile" name="curricullumfile" type="file"/>
             </span>
            </span>   
                <input id="filename" name="filename" class="form-control" type="text" readonly value="{{filename|raw}}"/>
            </div>
               <div class="col-sm-6">
              <label id ="fileerror" name="fileerror"></label>
              </div>
            </div>
    </div>
    <div class="form-group">
        <br><br>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>

{% endblock content%}
