{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block content %}
<div class="col-sm-offset-2 col-sm-8 deletequestion"><h4>{{'Are you sure you want to delete this Curricullum?'}}</h4></div>
<br>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{deleteurl}}" class="form-horizontal" role="form">
    <div class="form-group">
            <label class="control-label col-sm-2">{{'Name'}}</label>
            <div class="col-sm-8">
            <input id ="name" name="name" type="text" id="language" value="{{name|raw}}" class="col-sm-4" disabled>
            </div>
    </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Main Text'}}</label>
              <div class="col-sm-8">
              <textarea id ="maintextdelete" name="maintext" rows="3" class="col-sm-4" disabled>{{maintext}}</textarea>
              </div>
              <div class="col-sm-offset-2 col-sm-8">
              <label id ="maintexterror" name="maintext"></label>
              </div>
        </div>
         <div class="form-group">
            
            <label class="control-label col-sm-2">{{'About Me'}}</label>
            <div class="col-sm-8"> 
            <textarea id="aboutme" name="aboutme"  rows="3"  class="col-sm-4" disabled>{{aboutme}}</textarea>
            </div>
            <div class="col-sm-offset-2 col-sm-8">
            <label id ="aboutmeerror" name="aboutmeerror"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Contact Details'}}</label>
            <div class="col-sm-8"> 
            <textarea id ="contactdetails" name="contactdetails" class="col-sm-4"  rows="3" disabled>{{contactdetails}}</textarea>
            </div>
             <div class="col-sm-offset-2 col-sm-8">
            <label id ="contactdetailserror" name="contactdetailserror"></label>
             </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Main Skills'}}</label>
            <div class="col-sm-8"> 
            <textarea  id ="mainskills" name="mainskills"  class="col-sm-4" rows="3" disabled>{{mainskills}}</textarea>
            </div>
             <div class="col-sm-offset-2 col-sm-8">
            <label id ="mainskillserror" name="mainskillserror"></label>
             </div>
        </div>
    <br>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Delete"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>
{% endblock content%}