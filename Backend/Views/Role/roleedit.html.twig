{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath ~'/Views/Role/validaterole.js'}}"></script>
{% endblock javascript%} 
{% block content %}
{% block breadcrumb %}
{{parent()}}
{% endblock breadcrumb%}
<div class="col-sm-offset-2 col-sm-8">
  <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">{{'User Options'}}</div>
  <div class="panel-body">
    
      <div class="btn-group button_option" role="group">
            <a href="{{basepath~'/roleactions/'~id}}" class="btn btn-primary">
       <p><i class="fa fa-lock"></i>{{' Role Actions'}}</p>
       </a>
      </div>
  </div>
</div>
</div>
<label class="col-sm-offset-2 col-sm-8 error">{{errormessage|raw}}</label>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{updateurl}}" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Role'}}</label>
            <div class="col-sm-3">
            <input name="role" type="text" id="role" class="form-control" value="{{role|raw}}">
            </div>
         </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Description'}}</label>
              <div class="col-sm-4">
              <input name="description" type="description" id="description" class="form-control" value="{{description|raw}}">
              </div>      
        </div>
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>

{% endblock content%}