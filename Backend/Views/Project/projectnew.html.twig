{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block javascript%} 
{{parent()}}
<script src="{{templatepath~'/Views/Project/validateproject.js'}}"></script>
<script src="{{templatepath~'/Views/Project/projectpicture.js'}}"></script>  
{% endblock javascript%} 
{% block content %}
{% block breadcrumb %}
{{parent()}}
{% endblock breadcrumb%}
<label class="col-sm-offset-2 col-sm-8 error">{{errormessage|raw}}</label>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{selfurl}}" enctype="multipart/form-data" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Curricullum'}}</label>
            <div class="col-sm-3">
            {{globalobj.getcurricullumlist('class="form-control"',curricullumid)}}
            </div>
         </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Imagename'}}</label>
            <div class="col-sm-6">
            <div class="input-group">
            <span class="input-group-btn">    
            <span class="file-input btn btn-primary btn-file">
               <input id ="projectpicture" name="projectpicture" type="file"/>{{' Browse'}}
             </span>
                
            </span>   
                <input id="imagename" name="imagename" class="form-control" type="text" readonly value="{{imagename|raw}}"/>
            </div>
                 <div class="col-sm-6">
              <label id ="imageerror" name="imageerror"></label>
              </div>
            </div>
        </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Name'}}</label>
              <div class="col-sm-3">
              <input id ="name" name="name" type="text" class="form-control" value="{{name|raw}}">    
              </div>      
        </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Description'}}</label>
              <div class="col-sm-4">
              <input id ="description" name="description" type="text"  class="form-control" value="{{description|raw}}">  
              </div>      
        </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Link'}}</label>
              <div class="col-sm-3">
              <input id ="link" name="link" type="text"  class="form-control" value="{{linkproject|raw}}"></td>
              </div> 
        </div>
       
       
        <br>
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="savebutton" class="btn btn-primary" type="submit" value="Save"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>
{% endblock content%}