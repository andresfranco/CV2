{% extends "Templates/Masterpage/masteradmin.html.twig" %}
{% block content %}
{% block breadcrumb %}
{{parent()}}
{% endblock breadcrumb%}
<div class="col-sm-offset-2 col-sm-8 deletequestion"><h4>{{'Are you sure you want to delete this Project?'}}</h4></div>
<div id="formcontentgrid" class="col-sm-12">
<form id="appform" method="post" action="{{deleteurl}}" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Curricullum'}}</label>
            <div class="col-sm-3">
            {{globalobj.getcurricullumlist('class="form-control" Disabled',curricullumid)}}
            </div>
         </div>
         <div class="form-group">
            <label class="control-label col-sm-2">{{'Image'}}</label>
            <div class="col-sm-3">
                <img src="{{basepath~'/images/portfolio/'~imagename}}" width="128" height="128"/>
            </div>
    </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Name'}}</label>
              <div class="col-sm-3">
              <input id ="name" name="name" type="text" class="form-control" value="{{name|raw}}" Disabled>    
              </div>      
        </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Description'}}</label>
              <div class="col-sm-4">
              <input id ="description" name="description" type="text"  class="form-control" value="{{description|raw}}" Disabled>  
              </div>      
        </div> 
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Link'}}</label>
              <div class="col-sm-3">
              <input id ="link" name="link" type="text"  class="form-control" value="{{linkproject|raw}}" Disabled></td>
              </div> 
        </div>
        
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
        <input  id="deletebutton" class="btn btn-primary" type="submit" value="Delete"/>
        <a href="{{listurl}}" id ="cancelbutton" class="btn btn-primary cancel">Cancel</a>
        </div>
    </div>
</form>
</div>
{% endblock content%}
