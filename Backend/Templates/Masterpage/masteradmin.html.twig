<html>
 <head>
<meta charset="UTF-8">   
{% block javascript %}
<script src="{{templatepath~'/js/jquery2.1.0.js'}}"></script>
<script src="{{templatepath~'/js/bootstrap.min.js'}}"></script>
<script src="{{templatepath~'/js/jquery.validate.js'}}"></script>

{% endblock javascript %}
{% block css%}
<link href="{{basepath~'/Backend/css/bootstrap.min.css'}}" rel="stylesheet">
<link href="{{basepath~'/Backend/css/font-awesome.min.css'}}" rel="stylesheet">
<link href="{{basepath~'/Backend/css/backendtemplate.css'}}" type="text/css" rel="stylesheet"/>
{% endblock css %}

 </head>
 <body>
 {% block body %} 
    {% if session.valid=='1' %}
 {% else %}
    {{securityobj.logout()}}
 {% endif %}    
{% block topnavbar %}

  <nav class="navbar navbar-inverse">
  <div class="navbar-header">
    <a class="navbar-brand linkmenu" href="{{basepath~'/home'}}"><i class="fa fa-book"></i>{{'CV MAKER'}}</a>
    <a class="navbar-brand linkmenu" ><i class="fa fa-user"></i>
          {{ session.username}}</a>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
       <li><a href="{{basepath ~'/languages'}}" class="linkmenu"><i class="fa fa-flag"></i> {{'Language'}}</a></li>
             <li><a href="{{basepath ~'/curricullumlist'}}" class="linkmenu"><i class="fa fa-file"></i> Curricullum</a></li>
             <li><a href="{{basepath ~'/educationlist'}}" class="linkmenu"><i class="fa fa-book"></i> Education</a></li>
             <li><a href="{{basepath ~'/worklist'}}" class="linkmenu"><i class="fa fa-dashboard"></i>Work</a></li>
             <li><a href="{{basepath ~'/skills'}}" class="linkmenu"><i class="fa fa-list-alt"></i> Skills</a></li>
             <li><a href="{{basepath ~'/projects'}}" class="linkmenu"><i class="fa fa-edit"></i> Projects</a></li>
             <li><a href="{{basepath ~'/translationoptions'}}" class="linkmenu"><i class="fa fa-repeat"></i> Translations</a></li>
             <li><a href="{{basepath ~'/adminoptions'}}" class="linkmenu"><i class="fa fa-cogs"></i> System Admin</a></li>
             <li class="nav-divider"></li>
             <li><a href="{{basepath~'/logout'}}" class="linkmenu"><i class="fa fa-outdent"></i>{{' Logout'}}</a></li>
            
    </ul>
  </div>
</nav>
{% endblock topnavbar %}     
<div class="col-sm-12" id ="content">
 {% block content %}
     {% block breadcrumb %}
     <ol class="breadcrumb">
     <li><a href="{{basepath~link}}" class="linkmenu">{{option|raw}}</a></li>
     <li><a href="{{linkroute}}" class="route linkmenu">{{route|raw}}</a></li>
     </ol>
 {% endblock breadcrumb%}
<script src="{{templatepath~'/Views/Curricullum/validatecurricullum.js'}}"></script>
<label class="error">{{errormessage|raw}}</label><br>
<form id="appform" method="post" action="{{selfurl}}" class="form-horizontal" role="form">
   <div class="form-group">
            <label class="control-label col-sm-2">{{'Name'}}</label>
            <div class="col-sm-8">
            <input id ="name" name="name" type="text" id="language" value="{{name|raw}}" class="col-sm-6">
            </div>
    </div>
        <div class="form-group">
             <label class="control-label col-sm-2">{{'Main Text'}}</label>
              <div class="col-sm-8">
              <textarea id ="maintext" name="maintext" rows="3">{{maintext}}</textarea>
              </div>
              <div class="col-sm-offset-2 col-sm-8">
              <label id ="maintexterror" name="maintexterror"></label>
              </div>
        </div>
         <div class="form-group">
            
            <label class="control-label col-sm-2">{{'About Me'}}</label>
            <div class="col-sm-8"> 
            <textarea id="aboutme" name="aboutme"  rows="3">{{aboutme}}</textarea>
            </div>
            <div class="col-sm-offset-2 col-sm-8">
            <label id ="aboutmeerror" name="aboutmeerror"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Contact Details'}}</label>
            <div class="col-sm-8"> 
            <textarea class="cleditor" id ="contactdetails" name="contactdetails"  rows="3">{{contactdetails}}</textarea>
            </div>
            <div class="col-sm-offset-2 col-sm-8">
            <label id ="contactdetailserror" name="contactdetailserror"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">{{'Main Skills'}}</label>
            <div class="col-sm-8"> 
            <textarea class="cleditor" id ="mainskills" name="mainskills" rows="3">{{mainskills}}</textarea>
            </div>
            <div class="col-sm-offset-2 col-sm-8">
            <label id ="mainskillserror" name="mainskillserror"></label>
            </div>
        </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <input  class="btn btn-primary" type="submit" value="Save"/>
        <input  href="{{listurl}}" class="btn btn-primary cancel" type="submit" value="Cancel"/>
        </div>
    </div>
   
        
</form>
  	
{% endblock content%}					

  </div>
{% block footer %}
<footer id="footer">
 <div class="copyright" >
&copy; 2015 CV Maker   
</div>
</footer>
{% endblock footer %}     
{% endblock body %} 
</body>
</html>